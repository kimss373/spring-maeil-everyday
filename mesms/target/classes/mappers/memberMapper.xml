<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<insert id="insertMember" parameterType="MemberDTO">
		INSERT INTO
				MEMBER
		VALUES(
				#{memberId},
				#{memberNm},
				#{passwd},
             	#{sex},
               	#{dateBirth},
               	#{hp},
               	#{email},
               	NOW(),
               	'N',
               	'default.jpg'
		)
				
	</insert>
	
	<select id="selectOneDuplicatedId" parameterType="String" resultType="MemberDTO">
		SELECT
				*
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<select id="selectOneLogin" parameterType="MemberDTO" resultType="MemberDTO">
		SELECT
				*
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<select id="selectOneMemberNm" parameterType="MemberDTO" resultType="String">
		SELECT
				MEMBER_NM
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<select id="selectOneMemberDTO" parameterType="MemberDTO" resultType="MemberDTO">
		<if test='memberId == null'>
			SELECT
					*
			FROM
					MEMBER
			WHERE
					HP = #{hp} and
					EMAIL = #{email}
		</if>
		<if test="memberId != null">
			SELECT
					*
			FROM
					MEMBER
			WHERE
					MEMBER_ID = #{memberId} and
					HP = #{hp} and
					EMAIL = #{email}
		</if>
	</select>
	
	<update id="updatePasswd" parameterType="MemberDTO">
		UPDATE 
				MEMBER	
		SET
				PASSWD = #{passwd}
		WHERE
				MEMBER_ID = #{memberId}	
	</update>
	
	<select id="selectOneMemberDTOByMemberId" parameterType="String" resultType="MemberDTO">
		SELECT
				*
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<update id="updateProfileImage" parameterType="MemberDTO">
		UPDATE
				MEMBER
		SET
				PROFILE_IMAGE = #{profileImage}
		WHERE
				MEMBER_ID = #{memberId}
	</update>
	
	<update id="updateMyInfo" parameterType="MemberDTO">
		UPDATE
				MEMBER
		SET
				MEMBER_NM = #{memberNm},
				HP = #{hp},
				EMAIL = #{email}
		WHERE
				MEMBER_ID = #{memberId}
	</update>
	
	
</mapper> 